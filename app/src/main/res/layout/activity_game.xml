<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity"
    android:background="@color/blue_dark">

    <TextView
        android:id="@+id/best_score_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/best_score"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:layout_marginTop="30dp"
        />
    <TextView
        android:id="@+id/best_score_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/best_score_text"
        android:layout_centerHorizontal="true"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/current_score_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/best_score_number"
        android:layout_centerHorizontal="true"
        android:text="@string/current_score"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:layout_marginTop="30dp"
        />
    <TextView
        android:id="@+id/current_score_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/current_score_text"
        android:layout_centerHorizontal="true"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="30dp"
        android:layout_marginTop="10dp"
        />
    <Button
        android:id="@+id/game_button_3"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="20dp"
        android:text="3"
        android:textSize="100dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/green"/>
    <Button
        android:id="@+id/game_button_1"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_above="@id/game_button_3"
        android:layout_marginLeft="20dp"
        android:text="1"
        android:textSize="100dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/red"/>
    <Button
        android:id="@+id/game_button_2"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_toRightOf="@id/game_button_1"
        android:layout_alignBottom="@id/game_button_1"
        android:layout_marginLeft="10dp"
        android:text="2"
        android:textSize="100dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/blue"/>
    <Button
        android:id="@+id/game_button_4"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_toRightOf="@id/game_button_1"
        android:layout_alignBottom="@id/game_button_3"
        android:layout_marginLeft="10dp"
        android:text="4"
        android:textSize="100dp"
        android:textColor="@color/white"
        android:backgroundTint="@color/yellow"/>

</RelativeLayout>